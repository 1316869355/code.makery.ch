{%- if model.languages -%}
<div class="panel panel-default sidebar">
  <div class="panel-heading">
    <h4 class="panel-title">{{ model.languages.header }}</h4>  
  </div>
  <div class="list-group">
    {%- for lang_code in global[model.languages.collection][model.languages.item].languages -%}
      {%- capture link_lang %}{% if lang_code != "en" %}{{ lang_code }}/{% endif %}{% endcapture -%}
      {%- capture link_part %}{% if model.languages.part %}{{ model.languages.part }}/{% endif %}{% endcapture -%}
      <a href="/{{ model.languages.collection }}/{{ model.languages.item }}/{{ link_lang }}{{ link_part }}" class="list-group-item{% if lang_code == model.languages.active %} active{% endif %}">
        <i class="fa fa-fw fa-globe"></i> {{ global.languageCodes[lang_code] }}
      </a>
    {%- endfor -%}
  </div>
</div>
{%- endif -%}