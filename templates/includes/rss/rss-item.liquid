{% assign identifier = rss-item.slug %}
{% assign last = rss-item.slug | last %}
{% unless last == '/' %}{% assign identifier = identifier | append: '/' %}{% endunless %}
<item>
	<title><![CDATA[{{ rss-item.title }}]]></title>
	<link>{{ global.domain }}{{ identifier }}</link>
	<guid>{{ identifier }}</guid>
	{% for category in rss-item.tags %}
	<category>{{ category | html_encode }}</category>
	{% endfor %}
	<pubDate>{{ rss-item.date | date:'%a, %d %b %Y %H:%M:%S CET'}}</pubDate>
	<description>{{ rss-item.body | strip_html | truncatewords:50,'...' | html_encode }}</description>
</item>